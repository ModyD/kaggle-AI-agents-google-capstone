# =============================================================================
# Enterprise Security Incident Triage & Autonomous Runbook Agent
# Backend Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# For development: copy to .env.development
# For production (Docker/Cloud Run): copy to .env.production

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=development
APP_NAME=incident-triage-agent
SECRET_KEY=CHANGE_ME
BACKEND_PORT=8080
DEBUG=false
USE_STUB_LLM=false
LOG_LEVEL=INFO
JSON_LOGS=true

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Google Cloud / Vertex AI
# -----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1
VERTEX_AI_LOCATION=global  # Gemini models require global endpoint

# Gemini model settings
VERTEX_AI_MODEL=gemini-3-pro-preview
VERTEX_EMBEDDING_MODEL=text-embedding-004

# Path to service account key (local dev only)
# In production, Cloud Run uses workload identity
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# -----------------------------------------------------------------------------
# Neon PostgreSQL (pgvector)
# -----------------------------------------------------------------------------
# Get this from your Neon dashboard
NEON_DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# -----------------------------------------------------------------------------
# Upstash Redis
# -----------------------------------------------------------------------------
# Get these from your Upstash console
# Use the REST API URL (https://), not the Redis connection string (rediss://)
# Original format (for redis-py): rediss://default:your-token@your-endpoint.upstash.io:6379
UPSTASH_REDIS_REST_URL=https://your-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# -----------------------------------------------------------------------------
# LangSmith (Optional - for LLM tracing)
# -----------------------------------------------------------------------------
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=project-name

# -----------------------------------------------------------------------------
# OpenTelemetry (Optional)
# -----------------------------------------------------------------------------
# OTEL_EXPORTER_OTLP_ENDPOINT=
# OTEL_SERVICE_NAME=security-agent
